<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/colorPrimary"
    tools:context=".home1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/layout">
        <ScrollView
            android:id="@+id/scrollview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/outer_subjects_scroll1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <Button
                        android:id="@+id/maths"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/maths_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:text="Mathematics"
                        android:textColor="#ffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/science"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/science_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:text="Science"
                        android:textColor="#ffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <Button
                        android:id="@+id/social_Studies"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/social_science"
                        android:fontFamily="serif"
                        android:padding="10dp"
                        android:text="Social Studies"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/english"
                        android:layout_width="300dp"
                        android:textColor="#ffff"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/english_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:text="English"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <Button
                        android:id="@+id/hindi"
                        android:layout_width="300dp"
                        android:textColor="#ffff"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/hindi_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:text="Hindi"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/sanskrit"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/sanskrit_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:textColor="#ffff"
                        android:text="Sanskrit"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <Button
                        android:id="@+id/PE"
                        android:layout_width="300dp"
                        android:textColor="#ffff"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/physical_education"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:text="Physical And Health Education"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/IT"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_background"
                        android:drawableTop="@drawable/it_icon"
                        android:fontFamily="serif"
                        android:padding="15dp"
                        android:textColor="#ffff"
                        android:text="ICT"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-1873084368980224/7664562985"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />




    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>